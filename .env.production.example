# ===========================================
# LRPP - Production Environment Variables
# ===========================================
# Copy this file to .env on your VPS

# PostgreSQL Database
POSTGRES_USER=lrpp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=lrpp
DATABASE_URL=postgres://lrpp:CHANGE_ME_STRONG_PASSWORD@postgres:5432/lrpp

# Security
JWT_SECRET=CHANGE_ME_RANDOM_STRING_64_CHARS
CORS_ORIGIN=https://lrpp.ybdn.fr

# API URL (base domain, /api is appended in the app)
NEXT_PUBLIC_API_URL=https://lrpp.ybdn.fr

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=CHANGE_ME_SUPER_SECRET
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=CHANGE_ME_ANON_KEY

# Lemon Squeezy (paiement)
LEMONSQUEEZY_WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET
LEMONSQUEEZY_CHECKOUT_URL=https://your-store.lemonsqueezy.com/buy/your-product
